<?xml version="1.0"?>
<ruleset name="Delegator-Magento2">
    <description>Delegator - Magento2 Coding Standards</description>

    <!-- Check the files in this directory -->
    <file>.</file>

    <!-- Exclude these directories from linting -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Show colors in console -->
    <arg value="-colors" />

    <!-- Show warnings, show sniff codes, show progress -->
    <arg value="wsp" />

    <!-- Only lint these specific file extensions -->
    <arg name="extensions" value="php,phtml" />

    <!-- Use MEQP2 as a base -->
    <rule ref="MEQP2" />
</ruleset>
